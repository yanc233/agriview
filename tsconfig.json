{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@agri-view/*": ["packages/*/src"]
    },
    "lib": ["es2020", "dom"],
    "skipLibCheck": true
  },
  "include": ["packages/*"],
  "exclude": ["node_modules", "dist"]
}
